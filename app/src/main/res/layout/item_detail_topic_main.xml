<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_178dp"
    android:layout_height="@dimen/_178dp"
    android:layout_marginTop="@dimen/_12dp"
    android:layout_marginEnd="@dimen/_12dp"
    android:background="@drawable/bg_background_detail_topic"
    android:minHeight="@dimen/_140dp"
    android:padding="@dimen/_14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_marketing_plan" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:fontFamily="@font/font_bold"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconTopic"
        tools:text="Bus" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:lineSpacingExtra="@dimen/_4dp"
        android:textColor="@color/color_white_50"
        android:textSize="@dimen/_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Master your assignments with our premium essay writing services r premium essay writing services." />

</androidx.constraintlayout.widget.ConstraintLayout>