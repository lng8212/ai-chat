<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fmLostInternet_contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_bg_gradient"
        android:paddingVertical="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/fmLostInternet_imgExit"
            android:layout_width="@dimen/_171sdp"
            android:layout_height="@dimen/_166sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:lottie_autoPlay="true"
            app:lottie_fileName="anim_offline.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/fmLostInternet_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:text="@string/txt_no_internet"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fmLostInternet_imgExit" />

        <TextView
            android:id="@+id/fmLostInternet_tvDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="@string/txt_check_internet"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fmLostInternet_tvTitle" />

        <TextView
            android:id="@+id/fmLostInternet_tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/ripper_btn_full_grey_round"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_24sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/text_cancel"
            android:textColor="@color/color_grey_bbb"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/fmLostInternet_tvSubmit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fmLostInternet_tvDes" />

        <TextView
            android:id="@+id/fmLostInternet_tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/ripper_btn_full_green_round"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_24sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/text_setting"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fmLostInternet_tvCancel"
            app:layout_constraintTop_toBottomOf="@+id/fmLostInternet_tvDes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>