<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_grey_eee">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_grey_eee" />
            <corners android:radius="@dimen/_14sdp" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#FB462E"
                android:startColor="#FF8C07" />
            <corners android:radius="@dimen/_14sdp" />
        </shape>
    </item>

</ripple>