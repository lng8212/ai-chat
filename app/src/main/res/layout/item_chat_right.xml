<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/_8dp">

    <TextView
        android:id="@+id/chatItemListRightTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/color_white_40"
        android:textSize="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="06:06" />

    <TextView
        android:id="@+id/chatItemListRightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_border_background_chat_user"
        android:drawablePadding="@dimen/_12dp"
        android:fontFamily="@font/font_regular"
        android:gravity="center_vertical"
        android:padding="@dimen/_8dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_8dp"
        android:textColor="@color/color_white"
        android:textIsSelectable="true"
        android:textSize="@dimen/_13dp"
        app:drawableStartCompat="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatItemListRightTextTime"
        tools:ignore="SpUsage"
        tools:text="Can you explain this to me as if I were a child?" />

</androidx.constraintlayout.widget.ConstraintLayout>