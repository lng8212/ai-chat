<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_56sdp">

    <View
        android:id="@+id/baseHeader_headerBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/baseHeader_btnLeft"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/baseHeader_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_56sdp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/font_bold"
        android:drawablePadding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/baseHeader_btnLeft"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/baseHeader_btnCustom"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:padding="@dimen/_16sdp"
        android:translationX="16dp"
        android:src="@drawable/ic_history_chat"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/baseHeader_btnRight"
        app:layout_constraintTop_toTopOf="@+id/baseHeader_headerBg"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/baseHeader_btnRight"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:padding="@dimen/_16sdp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/baseHeader_headerBg"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>