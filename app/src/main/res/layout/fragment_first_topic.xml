<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_bg_gradient"
        android:theme="@style/Theme.BaseProjectMaterial"
        tools:context=".feature.topic.FragmentFirstTopic">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/fmFirstTopic_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="60dp"

                    app:layout_constraintDimensionRatio="320:191"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/fmFirstTopic_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="@string/choose_the_topics"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_24sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fmFirstTopic_img" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/fmFirstTopic_tvTitle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_interview_title"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic2"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_develop_title"
                            android:textColor="@color/color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic3"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_business_title"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic4"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_ad_title"
                            android:textColor="@color/color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic5"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_language_title"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic6"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_chef_title"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic7"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_composer_title"
                            android:textColor="@color/color_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fmFirstTopic_tvTopic8"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/ripper_btn_white10_round"
                            android:fontFamily="@font/font_medium"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="@string/txt_topic_mental_title"
                            android:textColor="@color/color_white" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>



        <TextView
            android:id="@+id/fmFirstTopic_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:background="@drawable/ripper_btn_full_green_round"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:text="@string/txt_continue"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/fmIntroFirstBottomGL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.83" />
        <ImageView
            android:id="@+id/fmFirstTopic_imvNext"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintTop_toTopOf="@+id/fmFirstTopic_confirm"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/fmFirstTopic_confirm"
            app:layout_constraintRight_toRightOf="@+id/fmFirstTopic_confirm"
            android:layout_marginRight="@dimen/_15sdp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fmIntroFirstBottomGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.92" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>